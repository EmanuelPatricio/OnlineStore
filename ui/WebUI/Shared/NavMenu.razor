@using WebUI.Helpers
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Online Store</a>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@PagesRoutes.DefaultNavigation.Home" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@PagesRoutes.DefaultNavigation.Tools" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Tools
            </NavLink>
        </div>

        <AuthorizeView Roles="Buyer">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="news/create">
                        <span class="oi oi-plus" aria-hidden="true"></span> Tools
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}